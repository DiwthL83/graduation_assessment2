<!-- Used to render list of all Contacts -->
<p>
<table>
	<tr>
		<th colspan="7">All Contacts</th>
	</tr>
	<tr>
		<th>Full Name</th>
		<th></th>
		<th></th>
		<th>Last Contacted</th>
	</tr>

	<% @contacts.each do |x| %>
		<tr>
			<td><a href= "contacts/<%= x.id %>"><%= x.cont_fname %> <%= x.cont_lname %></a></td>
			<td></td>
			<td></td>			
			<td><%= x.lastContact %></td>
			<td></td>
			<td></td>
			<td><%= link_to 'Edit', edit_contact_path(x) %>
				<%= link_to 'Delete', contact_path(x), method: :delete, data: {confirm: "Confirm delete?"} %>
			</td>
		</tr>
	<% end %>
</table>
</p>