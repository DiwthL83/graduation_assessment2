<!-- Used to render list of all Contacts -->
<h3>Contacts List</h3>

<table>
	<tr>
		<th>Full Name</th>
		<th>Phone Number</th>
		<th>Email Address</th>
		<th>Tag</th>
		<th colspan="4"></th>
	</tr>

	<% @contacts.each do |x| %>
		<tr>
			<td><%= x.cont_fname %> <%= x.cont_lname %></td>
			<td><%= x.cont_phone %></td>
			<td><%= x.cont_email %></td>
			<td><%= x.cont_tag %></td>
			<td><%= link_to 'Show', contact_path(x) %></td>
			<td><%= link_to 'Edit', edit_contact_path(x) %></td>
		</tr>
	<% end %>
</table>